<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :user_first_name, "First Name" %><br>
    <%= f.text_field :user_first_name %>
  </div>
  <div class="field">
    <%= f.label :user_last_name, "Last Name" %><br>
    <%= f.text_field :user_last_name %>
  </div>
  <div class="field">
    <%= f.label :email %><br>
    <%= f.text_field :email %>
  </div>     
  <div class="field">
    <%= f.label :password %>
    <% if logged_in? %>
      <span class="password-message">*Leave blank to keep current password</span>
    <% end %><br>    
  <div class="field">
    <%= f.password_field :password %>
  </div>    
  <div class="field">
    <%= f.label :password_confirmation, "Password Confirmation" %>
    <% if logged_in? %>
      <span class="password-message">*Leave blank to keep current password</span>
    <% end %><br>
    <%= f.password_field :password_confirmation %>
  </div>
  <div class="actions">
    <% if logged_in? %>
      <%= f.submit "Update Profile" %>
    <% else %>
      <%= f.submit "Register" %>
    <% end %>
  </div>
<% end %>
