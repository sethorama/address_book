<!DOCTYPE html>
<html>
<head>
  <title>Address Book</title>
  <meta content='text/html; charset=UTF-8' http-equiv='Content-Type' />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
		<div class="nav-bar clear">
		<div class="nav-links">
			<h1>Address Book</h1>
			<ul>
				<% if logged_in? %>
					<li>
						<span class="nav-mobile"><%= link_to '<i class="fa fa-plus"></i>'.html_safe, new_contact_path, class: "nav-left" %>
						</span>
						<span class="nav-wide"><%= link_to "New Contact", new_contact_path, class: "nav-left" %>
						</span>
					</li>
					<li>
						<span class="nav-mobile"><%= link_to '<i class="fa fa-sign-out"></i>'.html_safe, logout_path, method: :delete, class: "nav-right" %>
						</span>
						<span class="nav-wide"><%= link_to "Sign Out", logout_path, method: :delete, class: "nav-right" %>
						</span>
					</li>
					<li>
						<span class="nav-mobile"><%= link_to '<i class="fa fa-cog"></i>'.html_safe, edit_user_path(current_user), class: "nav-left-top" %>
						</span>
						<span class="nav-wide"><%= link_to "Profile", edit_user_path(current_user), class: "profile" %>
						</span>
					</li>
				<% else %>					
					<li>
						<span class="nav-mobile"><%= link_to '<i class="fa fa-chevron-up"></i>'.html_safe, new_user_path, class: "nav-right" %>
						</span>
						<span class="nav-wide"><%= link_to "Register", new_user_path, class: "nav-right" %>
						</span>
					</li>
				<% end %>
			</ul>	
		</div>
	</div>
	<div class="body-wrapper">
		<%= render partial: "layouts/flash" %>

		<%= yield %>
	</div>

</body>
</html>
